---
interface Props {}

const {} = Astro.props;
---
<div class="mx-auto max-w-7xl px-6 lg:px-8 py-12">
    <!-- Konten Diubah: Judul disesuaikan dengan logo produk -->
    <h2 class="text-center text-lg font-semibold leading-8 text-gray-900 mb-10">
        Menyediakan Suku Cadang dari Merek Terkemuka
    </h2>
    <div
             class="mx-auto grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-12 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 sm:gap-y-14 lg:mx-0 lg:max-w-none lg:grid-cols-5">
         <!-- Logo 1: Sesuai daftar produk -->
         <img class="col-span-2 max-h-16 w-full object-contain lg:col-span-1"
              src="https://placehold.co/158x48/f3f4f6/1e293b?text=KOMATSU" alt="Komatsu" width="158"
              height="48">
         
         <!-- Logo 2: Sesuai daftar produk -->
         <img class="col-span-2 max-h-16 w-full object-contain lg:col-span-1"
              src="https://placehold.co/158x48/f3f4f6/1e293b?text=CAT" alt="Caterpillar" width="158"
              height="48">
         
         <!-- Logo 3: Sesuai daftar produk -->
         <img class="col-span-2 max-h-16 w-full object-contain lg:col-span-1"
              src="https://placehold.co/158x48/f3f4f6/1e293b?text=YANMAR" alt="Yanmar" width="158"
              height="48">
         
         <!-- Logo 4: Sesuai daftar produk -->
         <img class="col-span-2 max-h-16 w-full object-contain sm:col-start-2 lg:col-span-1"
              src="https://placehold.co/158x48/f3f4f6/1e293b?text=HITACHI" alt="Hitachi" width="158"
              height="48">
         
         <!-- Logo 5: Diganti dari Wartsila ke Cummins (sesuai daftar produk) -->
         <img class="col-span-2 col-start-2 max-h-16 w-full object-contain sm:col-start-auto lg:col-span-1"
              src="https://placehold.co/158x48/f3f4f6/1e293b?text=CUMMINS" alt="Cummins" width="158"
              height="48">
    </div>
    <div class="mt-8 flex justify-center">
        <p class="relative rounded-full px-4 py-1.5 text-sm leading-6 text-gray-600 ring-1 ring-inset ring-gray-900/10 hover:ring-gray-900/20">
